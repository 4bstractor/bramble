<h1>Register</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
		  <h2>Form is Invalid</h2>
			<ul>
			  <% for message in @user.errors.full_messages %>
				  <li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
  <div>
  	<div class="field"><%= f.text_field :username, :placeholder => "Username" %></div>
	  OR
	  <div class="field"><%= f.text_field :email, :placeholder => "Email" %></div>
  </div>
	<div class="field"><%= f.password_field :password, :placeholder => "Password" %></div>
	<div class="field"><%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %></div>
	<div class="field"><%= f.text_field :quote, :placeholder => "Quote" %></div>
  <div class="field"><%= check_box_tag 'terms' %>I accept the terms of service</div>
	<div class="actions"><%= f.submit "Register Account" %></div>
<% end %>
