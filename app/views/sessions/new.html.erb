<h1>Sign In</h1>

<%= form_tag sessions_path do %>
  <div class="field"><%= text_field_tag :identifier, params[:identifier], :placeholder => "Username Or Email" %></div>
  <div class="field"><%= password_field_tag :password, nil, :placeholder => "Password" %></div>
  <p><%= link_to "forgotten password?", new_password_reset_path %></p>
  <div class="field"><label>Remember <%= check_box_tag :remember_me, 1, params[:remember_me] %></label></div>
  <!-- #TODO: Make a new button for these actions -->
  <div class="actions"><%= submit_tag "Sign In" %></div>
<% end %>
